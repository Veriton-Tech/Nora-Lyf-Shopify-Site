{% comment %} 
  GetSupp Benefits Section 
  Displays key benefits and features of the platform
{% endcomment %}

<div class="getsupp-benefits">
  <div class="getsupp-benefits-container">
    <div class="getsupp-benefits-header">
      <h2 class="getsupp-benefits-title">{{ section.settings.title | default: "Why Choose GetSupp?" }}</h2>
      <p class="getsupp-benefits-description">{{ section.settings.description | default: "We're committed to providing you with the best health supplement experience" }}</p>
    </div>

    <div class="getsupp-benefits-grid">
      {% for block in section.blocks %}
        <div class="getsupp-benefit-card" {{ block.shopify_attributes }}>
          <div class="getsupp-benefit-icon">
            {% if block.settings.benefit_icon %}
              <img
                src="{{ block.settings.benefit_icon | img_url: '60x60' }}"
                alt="{{ block.settings.benefit_title }}"
                class="getsupp-benefit-img">
            {% else %}
              <div class="getsupp-benefit-placeholder">
                <svg
                  width="40"
                  height="40"
                  viewBox="0 0 24 24"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg">
                  <path
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                    stroke="#24BAAD"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round" />
                </svg>
              </div>
            {% endif %}
          </div>
          <h3 class="getsupp-benefit-title">{{ block.settings.benefit_title | default: "100% Authentic" }}</h3>
          <p class="getsupp-benefit-description">{{ block.settings.benefit_description | default: "All our products are sourced directly from authorized distributors and manufacturers." }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% stylesheet %}
  .getsupp-benefits {
    padding: 80px 0;
    background: white;
    position: relative;
  }

  .getsupp-benefits-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .getsupp-benefits-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .getsupp-benefits-title {
    font-size: 36px;
    font-weight: 700;
    color: #333;
    margin-bottom: 16px;
    font-family: 'Inter'
    , sans-serif;
  }

  .getsupp-benefits-description {
    font-size: 18px;
    color: #666;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .getsupp-benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 40px;
  }

  .getsupp-benefit-card {
    text-align: center;
    padding: 40px 30px;
    border-radius: 20px;
    background: #f8f9fa;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    position: relative;
    overflow: hidden;
  }

  .getsupp-benefit-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(135deg, #24BAAD 0%, #1ea89a 100%);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .getsupp-benefit-card:hover {
    transform: translateY(-8px);
    background: white;
    box-shadow: 0 20px 50px rgba(36, 186, 173, 0.15);
    border-color: #24BAAD;
  }

  .getsupp-benefit-card:hover::before {
    transform: scaleX(1);
  }

  .getsupp-benefit-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #f0fdfc 0%, #e0f7fa 100%);
    border-radius: 50%;
    transition: all 0.3s ease;
  }

  .getsupp-benefit-card:hover .getsupp-benefit-icon {
    background: linear-gradient(135deg, #24BAAD 0%, #1ea89a 100%);
    transform: scale(1.1);
  }

  .getsupp-benefit-img {
    width: 40px;
    height: 40px;
    object-fit: contain;
  }

  .getsupp-benefit-placeholder {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .getsupp-benefit-card:hover .getsupp-benefit-placeholder svg {
    stroke: white;
  }

  .getsupp-benefit-title {
    font-size: 22px;
    font-weight: 600;
    color: #333;
    margin-bottom: 16px;
    font-family: 'Inter'
    , sans-serif;
  }

  .getsupp-benefit-description {
    font-size: 16px;
    color: #666;
    line-height: 1.6;
    margin: 0;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .getsupp-benefits {
      padding: 60px 0;
    }

    .getsupp-benefits-title {
      font-size: 28px;
    }

    .getsupp-benefits-description {
      font-size: 16px;
    }

    .getsupp-benefits-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .getsupp-benefit-card {
      padding: 30px 20px;
    }
  }
{% endstylesheet %}

