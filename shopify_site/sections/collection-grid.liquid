{% comment %}
  Collection grid section for GetSupp-style collection pages
{% endcomment %}

<div class="collection-grid">
  <div class="container">
    <div class="collection-grid__header">
      <h1 class="collection-grid__title">{{ collection.title }}</h1>
      {% if collection.description != blank %}
        <div class="collection-grid__description">{{ collection.description }}</div>
      {% endif %}
    </div>
    
    <div class="collection-grid__filters">
      <div class="collection-grid__filter-group">
        <label class="collection-grid__filter-label">Sort by:</label>
        <select class="collection-grid__filter-select" id="sort-select">
          <option value="manual">Featured</option>
          <option value="best-selling">Best Selling</option>
          <option value="title-ascending">A-Z</option>
          <option value="title-descending">Z-A</option>
          <option value="price-ascending">Price: Low to High</option>
          <option value="price-descending">Price: High to Low</option>
          <option value="created-descending">Newest</option>
        </select>
      </div>
      
      <div class="collection-grid__filter-group">
        <label class="collection-grid__filter-label">Filter by:</label>
        <div class="collection-grid__filter-tags">
          <button class="collection-grid__filter-tag active" data-filter="all">All</button>
          <button class="collection-grid__filter-tag" data-filter="vitamins">Vitamins</button>
          <button class="collection-grid__filter-tag" data-filter="minerals">Minerals</button>
          <button class="collection-grid__filter-tag" data-filter="herbal">Herbal</button>
          <button class="collection-grid__filter-tag" data-filter="protein">Protein</button>
        </div>
      </div>
    </div>
    
    <div class="collection-grid__content">
      <div class="collection-grid__sidebar">
        <div class="collection-grid__filters-mobile">
          <h3>Filters</h3>
          <div class="collection-grid__filter-section">
            <h4>Category</h4>
            <div class="collection-grid__filter-options">
              <label class="collection-grid__filter-option">
                <input type="checkbox" value="vitamins" checked>
                <span>Vitamins</span>
              </label>
              <label class="collection-grid__filter-option">
                <input type="checkbox" value="minerals" checked>
                <span>Minerals</span>
              </label>
              <label class="collection-grid__filter-option">
                <input type="checkbox" value="herbal" checked>
                <span>Herbal</span>
              </label>
              <label class="collection-grid__filter-option">
                <input type="checkbox" value="protein" checked>
                <span>Protein</span>
              </label>
            </div>
          </div>
          
          <div class="collection-grid__filter-section">
            <h4>Price Range</h4>
            <div class="collection-grid__price-range">
              <input type="range" min="0" max="5000" value="5000" class="collection-grid__price-slider">
              <div class="collection-grid__price-values">
                <span>₹0</span>
                <span>₹5000+</span>
              </div>
            </div>
          </div>
          
          <div class="collection-grid__filter-section">
            <h4>Brand</h4>
            <div class="collection-grid__filter-options">
              <label class="collection-grid__filter-option">
                <input type="checkbox" value="himalaya" checked>
                <span>Himalaya</span>
              </label>
              <label class="collection-grid__filter-option">
                <input type="checkbox" value="patanjali" checked>
                <span>Patanjali</span>
              </label>
              <label class="collection-grid__filter-option">
                <input type="checkbox" value="dabur" checked>
                <span>Dabur</span>
              </label>
              <label class="collection-grid__filter-option">
                <input type="checkbox" value="baidyanath" checked>
                <span>Baidyanath</span>
              </label>
            </div>
          </div>
        </div>
      </div>
      
      <div class="collection-grid__main">
        <div class="collection-grid__products">
          {% for product in collection.products %}
            <div class="collection-grid__product" data-category="{{ product.tags | join: ',' | downcase }}">
              <div class="collection-grid__product-image">
                {% if product.featured_image %}
                  {% render 'image', image: product.featured_image, alt: product.title, class: 'collection-grid__product-img' %}
                {% else %}
                  <div class="collection-grid__product-placeholder">
                    <svg width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                      <circle cx="8.5" cy="8.5" r="1.5"></circle>
                      <polyline points="21,15 16,10 5,21"></polyline>
                    </svg>
                  </div>
                {% endif %}
                
                {% if product.compare_at_price > product.price %}
                  <div class="collection-grid__product-badge">Sale</div>
                {% endif %}
                
                <div class="collection-grid__product-actions">
                  <button class="collection-grid__product-wishlist" title="Add to Wishlist">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                    </svg>
                  </button>
                  
                  <button class="collection-grid__product-quick-view" title="Quick View">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                      <circle cx="12" cy="12" r="3"></circle>
                    </svg>
                  </button>
                </div>
              </div>
              
              <div class="collection-grid__product-info">
                <h3 class="collection-grid__product-title">
                  <a href="{{ product.url }}">{{ product.title }}</a>
                </h3>
                
                {% comment %} Category pill - prefer product.type, fallback to known tags or first tag {% endcomment %}
                {% assign category_text = product.type | default: '' %}
                {% if category_text == blank and product.tags.size > 0 %}
                  {% comment %} try to find sensible tag like ayurvedic/organic/herbal/ayurveda (case-insensitive) {% endcomment %}
                  {% assign found = '' %}
                  {% for t in product.tags %}
                    {% assign tl = t | downcase %}
                    {% if tl contains 'ayur' or tl contains 'herbal' or tl contains 'organic' or tl contains 'supplement' %}
                      {% assign found = t %}
                      {% break %}
                    {% endif %}
                  {% endfor %}
                  {% if found != '' %}
                    {% assign category_text = found %}
                  {% else %}
                    {% assign category_text = product.tags.first %}
                  {% endif %}
                {% endif %}

                {% if category_text != blank %}
                  <div class="card__category">
                    <span class="card__category-tag">{{ category_text }}</span>
                  </div>
                {% endif %}

                <div class="collection-grid__product-rating">
                  <div class="collection-grid__product-stars">
                    {% for i in (1..5) %}
                      <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                        <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26"></polygon>
                      </svg>
                    {% endfor %}
                  </div>
                  <span class="collection-grid__product-rating-text">(4.5)</span>
                </div>
                
                <div class="collection-grid__product-price">
                  {% if product.compare_at_price > product.price %}
                    <span class="collection-grid__product-price-compare">{{ product.compare_at_price | money }}</span>
                    <span class="collection-grid__product-price-sale">{{ product.price | money }}</span>
                  {% else %}
                    <span class="collection-grid__product-price-regular">{{ product.price | money }}</span>
                  {% endif %}
                </div>
                
                <button class="collection-grid__product-add-to-cart" data-product-id="{{ product.id }}">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="9" cy="21" r="1"></circle>
                    <circle cx="20" cy="21" r="1"></circle>
                    <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                  </svg>
                  Add to Cart
                </button>
              </div>
            </div>
          {% endfor %}
        </div>
        
        {% if paginate.pages > 1 %}
          <div class="collection-grid__pagination">
            {% if paginate.previous %}
              <a href="{{ paginate.previous.url }}" class="collection-grid__pagination-btn collection-grid__pagination-btn--prev">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="15,18 9,12 15,6"></polyline>
                </svg>
                Previous
              </a>
            {% endif %}
            
            <div class="collection-grid__pagination-numbers">
              {% for part in paginate.parts %}
                {% if part.is_link %}
                  <a href="{{ part.url }}" class="collection-grid__pagination-number">{{ part.title }}</a>
                {% else %}
                  <span class="collection-grid__pagination-number collection-grid__pagination-number--current">{{ part.title }}</span>
                {% endif %}
              {% endfor %}
            </div>
            
            {% if paginate.next %}
              <a href="{{ paginate.next.url }}" class="collection-grid__pagination-btn collection-grid__pagination-btn--next">
                Next
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="9,18 15,12 9,6"></polyline>
                </svg>
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  .collection-grid {
    padding: 2rem 0;
  }
  
  .collection-grid__header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .collection-grid__title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #2c3e50;
    margin: 0 0 1rem 0;
  }
  
  .collection-grid__description {
    font-size: 1.1rem;
    color: #6c757d;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .collection-grid__filters {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    padding: 1rem;
    background: #f8f9fa;
    border-radius: 8px;
  }
  
  .collection-grid__filter-group {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .collection-grid__filter-label {
    font-weight: 600;
    color: #2c3e50;
  }
  
  .collection-grid__filter-select {
    padding: 0.5rem 1rem;
    border: 1px solid #ced4da;
    border-radius: 4px;
    background: white;
    font-size: 0.9rem;
  }
  
  .collection-grid__filter-tags {
    display: flex;
    gap: 0.5rem;
  }
  
  .collection-grid__filter-tag {
    padding: 0.5rem 1rem;
    border: 1px solid #ced4da;
    background: white;
    border-radius: 20px;
    cursor: pointer;
    font-size: 0.9rem;
    transition: all 0.2s;
  }
  
  .collection-grid__filter-tag:hover,
  .collection-grid__filter-tag.active {
    background: #24BAAD;
    color: white;
    border-color: #24BAAD;
  }
  
  .collection-grid__content {
    display: grid;
    grid-template-columns: 250px 1fr;
    gap: 2rem;
  }
  
  .collection-grid__sidebar {
    background: #f8f9fa;
    padding: 1.5rem;
    border-radius: 8px;
    height: fit-content;
  }
  
  .collection-grid__filters-mobile h3 {
    margin: 0 0 1.5rem 0;
    font-size: 1.2rem;
    color: #2c3e50;
  }
  
  .collection-grid__filter-section {
    margin-bottom: 2rem;
  }
  
  .collection-grid__filter-section h4 {
    margin: 0 0 1rem 0;
    font-size: 1rem;
    color: #495057;
  }
  
  .collection-grid__filter-options {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .collection-grid__filter-option {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
  }
  
  .collection-grid__filter-option input[type="checkbox"] {
    margin: 0;
  }
  
  .collection-grid__price-range {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .collection-grid__price-slider {
    width: 100%;
  }
  
  .collection-grid__price-values {
    display: flex;
    justify-content: space-between;
    font-size: 0.9rem;
    color: #6c757d;
  }
  
  .collection-grid__products {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
  }
  
  .collection-grid__product {
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    transition: transform 0.2s, box-shadow 0.2s;
  }
  
  .collection-grid__product:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0,0,0,0.15);
  }
  
  .collection-grid__product-image {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
  }
  
  .collection-grid__product-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .collection-grid__product-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    background: #f8f9fa;
    color: #6c757d;
  }
  
  .collection-grid__product-badge {
    position: absolute;
    top: 0.5rem;
    left: 0.5rem;
    background: #e74c3c;
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: 600;
  }
  
  .collection-grid__product-actions {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    opacity: 0;
    transition: opacity 0.2s;
  }
  
  .collection-grid__product:hover .collection-grid__product-actions {
    opacity: 1;
  }
  
  .collection-grid__product-wishlist,
  .collection-grid__product-quick-view {
    width: 36px;
    height: 36px;
    border: none;
    background: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    transition: background-color 0.2s;
  }
  
  .collection-grid__product-wishlist:hover,
  .collection-grid__product-quick-view:hover {
    background: #f8f9fa;
  }
  
  .collection-grid__product-info {
    padding: 1.5rem;
  }
  
  .collection-grid__product-title {
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
    font-weight: 600;
  }
  
  .collection-grid__product-title a {
    color: #2c3e50;
    text-decoration: none;
  }
  
  .collection-grid__product-title a:hover {
    color: #24BAAD;
  }
  
  .collection-grid__product-rating {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    margin-bottom: 0.5rem;
  }
  
  .collection-grid__product-stars {
    display: flex;
    color: #ffc107;
  }
  
  .collection-grid__product-rating-text {
    font-size: 0.9rem;
    color: #6c757d;
  }
  
  .collection-grid__product-price {
    margin-bottom: 1rem;
  }
  
  .collection-grid__product-price-regular {
    font-size: 1.2rem;
    font-weight: 700;
    color: #2c3e50;
  }
  
  .collection-grid__product-price-compare {
    font-size: 1rem;
    color: #6c757d;
    text-decoration: line-through;
    margin-right: 0.5rem;
  }
  
  .collection-grid__product-price-sale {
    font-size: 1.2rem;
    font-weight: 700;
    color: #e74c3c;
  }
  
  .collection-grid__product-add-to-cart {
    width: 100%;
    background: #24BAAD;
    color: white;
    border: none;
    padding: 0.75rem 1rem;
    border-radius: 4px;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    transition: background-color 0.2s;
  }
  
  .collection-grid__product-add-to-cart:hover {
    background: #1ea896;
  }
  
  .collection-grid__pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin-top: 3rem;
  }
  
  .collection-grid__pagination-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: #24BAAD;
    color: white;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 600;
    transition: background-color 0.2s;
  }
  
  .collection-grid__pagination-btn:hover {
    background: #1ea896;
  }
  
  .collection-grid__pagination-numbers {
    display: flex;
    gap: 0.5rem;
  }
  
  .collection-grid__pagination-number {
    padding: 0.75rem 1rem;
    background: white;
    color: #2c3e50;
    text-decoration: none;
    border: 1px solid #ced4da;
    border-radius: 4px;
    transition: all 0.2s;
  }
  
  .collection-grid__pagination-number:hover {
    background: #f8f9fa;
  }
  
  .collection-grid__pagination-number--current {
    background: #24BAAD;
    color: white;
    border-color: #24BAAD;
  }
  
  @media (max-width: 768px) {
    .collection-grid__content {
      grid-template-columns: 1fr;
    }
    
    .collection-grid__sidebar {
      display: none;
    }
    
    .collection-grid__filters {
      flex-direction: column;
      gap: 1rem;
      align-items: stretch;
    }
    
    .collection-grid__filter-group {
      justify-content: space-between;
    }
    
    .collection-grid__products {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 1.5rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Collection Grid",
  "settings": []
}
{% endschema %}
