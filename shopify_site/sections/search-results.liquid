{% comment %}
  Search results section for GetSupp-style search functionality
{% endcomment %}

<div class="search-results">
  <div class="container">
    <div class="search-results__header">
      <h1 class="search-results__title">
        {% if search.performed %}
          Search Results for "{{ search.terms | escape }}"
        {% else %}
          Search
        {% endif %}
      </h1>
      
      {% if search.performed %}
        <p class="search-results__count">
          {{ search.results_count }} result{% if search.results_count != 1 %}s{% endif %} found
        </p>
      {% endif %}
    </div>
    
    <div class="search-results__filters">
      <div class="search-results__filter-group">
        <label class="search-results__filter-label">Sort by:</label>
        <select class="search-results__filter-select" id="search-sort">
          <option value="relevance">Relevance</option>
          <option value="price-ascending">Price: Low to High</option>
          <option value="price-descending">Price: High to Low</option>
          <option value="title-ascending">A-Z</option>
          <option value="title-descending">Z-A</option>
        </select>
      </div>
      
      <div class="search-results__filter-group">
        <label class="search-results__filter-label">Type:</label>
        <div class="search-results__filter-tabs">
          <button class="search-results__filter-tab active" data-type="all">All ({{ search.results_count }})</button>
          <button class="search-results__filter-tab" data-type="products">Products ({{ search.results | where: 'object_type', 'product' | size }})</button>
          <button class="search-results__filter-tab" data-type="articles">Articles ({{ search.results | where: 'object_type', 'article' | size }})</button>
          <button class="search-results__filter-tab" data-type="pages">Pages ({{ search.results | where: 'object_type', 'page' | size }})</button>
        </div>
      </div>
    </div>
    
    <div class="search-results__content">
      {% if search.performed %}
        {% if search.results.size > 0 %}
          <div class="search-results__grid">
            {% for item in search.results %}
              <div class="search-results__item" data-type="{{ item.object_type }}">
                {% if item.object_type == 'product' %}
                  <div class="search-results__product">
                    <div class="search-results__product-image">
                      {% if item.featured_image %}
                        {% render 'image', image: item.featured_image, alt: item.title, class: 'search-results__product-img' %}
                      {% else %}
                        <div class="search-results__product-placeholder">
                          <svg width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                            <circle cx="8.5" cy="8.5" r="1.5"></circle>
                            <polyline points="21,15 16,10 5,21"></polyline>
                          </svg>
                        </div>
                      {% endif %}
                    </div>
                    
                    <div class="search-results__product-info">
                      <h3 class="search-results__product-title">
                        <a href="{{ item.url }}">{{ item.title }}</a>
                      </h3>
                      
                      <div class="search-results__product-meta">
                        <span class="search-results__product-type">Product</span>
                        {% if item.vendor != blank %}
                          <span class="search-results__product-brand">{{ item.vendor }}</span>
                        {% endif %}
                      </div>
                      
                      <div class="search-results__product-price">
                        {% if item.compare_at_price > item.price %}
                          <span class="search-results__product-price-compare">{{ item.compare_at_price | money }}</span>
                          <span class="search-results__product-price-sale">{{ item.price | money }}</span>
                        {% else %}
                          <span class="search-results__product-price-regular">{{ item.price | money }}</span>
                        {% endif %}
                      </div>
                      
                      <div class="search-results__product-description">
                        {{ item.content | strip_html | truncate: 150 }}
                      </div>
                      
                      <div class="search-results__product-actions">
                        <a href="{{ item.url }}" class="search-results__product-view">View Product</a>
                        <button class="search-results__product-add-to-cart" data-product-id="{{ item.id }}">
                          Add to Cart
                        </button>
                      </div>
                    </div>
                  </div>
                  
                {% elsif item.object_type == 'article' %}
                  <div class="search-results__article">
                    <div class="search-results__article-image">
                      {% if item.image %}
                        {% render 'image', image: item.image, alt: item.title, class: 'search-results__article-img' %}
                      {% else %}
                        <div class="search-results__article-placeholder">
                          <svg width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                            <polyline points="14,2 14,8 20,8"></polyline>
                            <line x1="16" y1="13" x2="8" y2="13"></line>
                            <line x1="16" y1="17" x2="8" y2="17"></line>
                            <polyline points="10,9 9,9 8,9"></polyline>
                          </svg>
                        </div>
                      {% endif %}
                    </div>
                    
                    <div class="search-results__article-info">
                      <h3 class="search-results__article-title">
                        <a href="{{ item.url }}">{{ item.title }}</a>
                      </h3>
                      
                      <div class="search-results__article-meta">
                        <span class="search-results__article-type">Article</span>
                        <span class="search-results__article-date">{{ item.published_at | date: '%B %d, %Y' }}</span>
                      </div>
                      
                      <div class="search-results__article-excerpt">
                        {{ item.excerpt | strip_html | truncate: 200 }}
                      </div>
                      
                      <div class="search-results__article-tags">
                        {% for tag in item.tags limit: 3 %}
                          <span class="search-results__article-tag">{{ tag }}</span>
                        {% endfor %}
                      </div>
                      
                      <a href="{{ item.url }}" class="search-results__article-read-more">Read More</a>
                    </div>
                  </div>
                  
                {% elsif item.object_type == 'page' %}
                  <div class="search-results__page">
                    <div class="search-results__page-icon">
                      <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                        <polyline points="14,2 14,8 20,8"></polyline>
                      </svg>
                    </div>
                    
                    <div class="search-results__page-info">
                      <h3 class="search-results__page-title">
                        <a href="{{ item.url }}">{{ item.title }}</a>
                      </h3>
                      
                      <div class="search-results__page-meta">
                        <span class="search-results__page-type">Page</span>
                      </div>
                      
                      <div class="search-results__page-content">
                        {{ item.content | strip_html | truncate: 200 }}
                      </div>
                      
                      <a href="{{ item.url }}" class="search-results__page-view">View Page</a>
                    </div>
                  </div>
                {% endif %}
              </div>
            {% endfor %}
          </div>
          
          {% if paginate.pages > 1 %}
            <div class="search-results__pagination">
              {% if paginate.previous %}
                <a href="{{ paginate.previous.url }}" class="search-results__pagination-btn search-results__pagination-btn--prev">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="15,18 9,12 15,6"></polyline>
                  </svg>
                  Previous
                </a>
              {% endif %}
              
              <div class="search-results__pagination-numbers">
                {% for part in paginate.parts %}
                  {% if part.is_link %}
                    <a href="{{ part.url }}" class="search-results__pagination-number">{{ part.title }}</a>
                  {% else %}
                    <span class="search-results__pagination-number search-results__pagination-number--current">{{ part.title }}</span>
                  {% endif %}
                {% endfor %}
              </div>
              
              {% if paginate.next %}
                <a href="{{ paginate.next.url }}" class="search-results__pagination-btn search-results__pagination-btn--next">
                  Next
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="9,18 15,12 9,6"></polyline>
                  </svg>
                </a>
              {% endif %}
            </div>
          {% endif %}
          
        {% else %}
          <div class="search-results__empty">
            <div class="search-results__empty-icon">
              <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.35-4.35"></path>
              </svg>
            </div>
            <h2 class="search-results__empty-title">No results found</h2>
            <p class="search-results__empty-text">
              Sorry, we couldn't find any results for "{{ search.terms | escape }}". 
              Try adjusting your search terms or browse our categories.
            </p>
            <div class="search-results__empty-actions">
              <a href="{{ routes.root_url }}" class="search-results__empty-btn">Browse All Products</a>
              <a href="{{ routes.collections_url }}" class="search-results__empty-btn search-results__empty-btn--secondary">View Categories</a>
            </div>
          </div>
        {% endif %}
      {% else %}
        <div class="search-results__placeholder">
          <div class="search-results__placeholder-icon">
            <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"></circle>
              <path d="m21 21-4.35-4.35"></path>
            </svg>
          </div>
          <h2 class="search-results__placeholder-title">Search for supplements & health concerns</h2>
          <p class="search-results__placeholder-text">
            Find the perfect supplements for your health and wellness needs.
          </p>
        </div>
      {% endif %}
    </div>
  </div>
</div>

