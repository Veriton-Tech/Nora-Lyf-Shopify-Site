{% comment %}
  Enhanced Article Section with Internal Linking
  Displays blog post content with related products and collections
{% endcomment %}

<article class="article-container">
  <header class="article-header">
    {% if article.image %}
      <div class="article-featured-image">
        {{ article.image | image_url: width: 1200 | image_tag: loading: 'lazy' }}
      </div>
    {% endif %}

    <div class="article-meta">
      <h1 class="article-title">{{ article.title }}</h1>
      
      <div class="article-metadata">
        {% assign date = article.published_at | time_tag: format: 'date' %}
        <span class="article-date">{{ date }}</span>
        <span class="article-author">By {{ article.author }}</span>
        
        {% if article.tags.size > 0 %}
          <div class="article-tags">
            {% for tag in article.tags %}
              <span class="article-tag">{{ tag }}</span>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  </header>

  <div class="article-content">
    {{ article.content }}
  </div>

  {% comment %} Related Products Section {% endcomment %}
  {% render 'internal-links', article: article, type: 'products', limit: 4 %}

  {% comment %} Related Collections Section {% endcomment %}
  {% render 'internal-links', article: article, type: 'collections', limit: 3 %}

  {% comment %} Social Sharing {% endcomment %}
  <div class="article-sharing">
    <h3>Share this article</h3>
    <div class="sharing-buttons">
      <a href="https://www.facebook.com/sharer/sharer.php?u={{ shop.url }}{{ article.url }}" 
         target="_blank" 
         class="share-button facebook">
        Share on Facebook
      </a>
      <a href="https://twitter.com/intent/tweet?url={{ shop.url }}{{ article.url }}&text={{ article.title | url_encode }}" 
         target="_blank" 
         class="share-button twitter">
        Share on Twitter
      </a>
      <a href="https://www.linkedin.com/sharing/share-offsite/?url={{ shop.url }}{{ article.url }}" 
         target="_blank" 
         class="share-button linkedin">
        Share on LinkedIn
      </a>
    </div>
  </div>

  {% comment %} Navigation to other articles {% endcomment %}
  <nav class="article-navigation">
    {% if blog.previous_article %}
      <a href="{{ blog.previous_article.url }}" class="nav-link prev-article">
        <span class="nav-label">Previous</span>
        <span class="nav-title">{{ blog.previous_article.title }}</span>
      </a>
    {% endif %}

    <a href="{{ blog.url }}" class="nav-link blog-home">
      <span class="nav-label">Back to</span>
      <span class="nav-title">{{ blog.title }}</span>
    </a>

    {% if blog.next_article %}
      <a href="{{ blog.next_article.url }}" class="nav-link next-article">
        <span class="nav-label">Next</span>
        <span class="nav-title">{{ blog.next_article.title }}</span>
      </a>
    {% endif %}
  </nav>
</article>

{% if blog.comments_enabled? %}
  <h2>{{ 'blog.article_comments' | t }}</h2>

  <div id="comments">
    {% paginate article.comments by 10 %}
      {% for comment in article.comments %}
        <div>
          <p>{{ comment.author }}</p>
          <p>
            {{- comment.created_at | time_tag: format: 'date' -}}
          </p>
          <p>{{ comment.content }}</p>
        </div>
      {% endfor %}

      {{ paginate | default_pagination: anchor: 'comments' }}
    {% endpaginate %}
  </div>

  {% form 'new_comment', article %}
    <h2>{{ 'blog.comment_form_title' | t }}</h2>

    {{ form.errors | default_errors }}

    <div>
      <label for="author">{{ 'blog.comment_form_name' | t }}</label>
      <input type="text" name="comment[author]" id="author" value="{{ form.author }}" required>
    </div>

    <div>
      <label for="email">{{ 'blog.comment_form_email' | t }}</label>
      <input type="email" name="comment[email]" id="email" value="{{ form.email }}" required>
    </div>

    <div>
      <label for="body">{{ 'blog.comment_form_body' | t }}</label>
      <textarea name="comment[body]" id="body" required>{{ form.body }}</textarea>
    </div>

    <input type="submit" value="{{ 'blog.comment_form_submit' | t }}">
  {% endform %}
{% endif %}

{% schema %}
{
  "name": "t:general.article",
  "settings": []
}
{% endschema %}

<style>
  .article-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 40px 20px;
    font-family: system-ui, -apple-system, sans-serif;
  }

  .article-header {
    margin-bottom: 40px;
  }

  .article-featured-image {
    margin-bottom: 30px;
    border-radius: 12px;
    overflow: hidden;
  }

  .article-featured-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .article-title {
    font-size: 36px;
    font-weight: 700;
    color: #2c3e50;
    line-height: 1.2;
    margin-bottom: 20px;
  }

  .article-metadata {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    align-items: center;
    padding-bottom: 20px;
    border-bottom: 1px solid #eee;
  }

  .article-date,
  .article-author {
    color: #666;
    font-size: 14px;
  }

  .article-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .article-tag {
    background: #f8f9fa;
    color: #495057;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 500;
  }

  .article-content {
    font-size: 18px;
    line-height: 1.7;
    color: #2c3e50;
    margin-bottom: 40px;
  }

  .article-content p {
    margin-bottom: 20px;
  }

  .article-content h2,
  .article-content h3,
  .article-content h4 {
    margin-top: 40px;
    margin-bottom: 20px;
    color: #2c3e50;
  }

  .article-content img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 20px 0;
  }

  .article-sharing {
    margin: 40px 0;
    padding: 30px;
    background: #f8f9fa;
    border-radius: 12px;
    text-align: center;
  }

  .article-sharing h3 {
    margin-bottom: 20px;
    color: #2c3e50;
  }

  .sharing-buttons {
    display: flex;
    justify-content: center;
    gap: 15px;
    flex-wrap: wrap;
  }

  .share-button {
    display: inline-block;
    padding: 12px 20px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    color: white;
  }

  .share-button.facebook {
    background: #1877f2;
  }

  .share-button.twitter {
    background: #1da1f2;
  }

  .share-button.linkedin {
    background: #0077b5;
  }

  .share-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .article-navigation {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 20px;
    margin-top: 60px;
    padding-top: 40px;
    border-top: 1px solid #eee;
  }

  .nav-link {
    display: block;
    padding: 20px;
    background: #f8f9fa;
    border-radius: 8px;
    text-decoration: none;
    color: #2c3e50;
    transition: all 0.3s ease;
  }

  .nav-link:hover {
    background: #04683F;
    color: white;
    transform: translateY(-2px);
  }

  .nav-label {
    display: block;
    font-size: 12px;
    font-weight: 500;
    text-transform: uppercase;
    margin-bottom: 5px;
    opacity: 0.7;
  }

  .nav-title {
    display: block;
    font-weight: 600;
    line-height: 1.3;
  }

  .blog-home {
    text-align: center;
  }

  .next-article {
    text-align: right;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .article-container {
      padding: 20px 15px;
    }

    .article-title {
      font-size: 28px;
    }

    .article-content {
      font-size: 16px;
    }

    .article-metadata {
      flex-direction: column;
      align-items: flex-start;
      gap: 15px;
    }

    .sharing-buttons {
      flex-direction: column;
    }

    .article-navigation {
      grid-template-columns: 1fr;
      gap: 15px;
    }

    .nav-link {
      text-align: center;
    }
  }
</style>
