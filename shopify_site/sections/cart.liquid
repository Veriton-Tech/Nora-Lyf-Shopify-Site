                              <script>
                              document.addEventListener('DOMContentLoaded', function() {
                                // Quantity controls
                                const quantityInputs = document.querySelectorAll('.cart-page__quantity-input');
                                const decreaseBtns = document.querySelectorAll('[data-action="decrease"]');
                                const increaseBtns = document.querySelectorAll('[data-action="increase"]');
                                                
              function submitCartUpdateFrom(element) {
                const form = element.closest('.cart-page__form');
                if (form) {
                  const updateBtn = form.querySelector('.cart-page__update-btn');
                  if (updateBtn) {
                    updateBtn.click();
                  } else {
                    form.submit();
                  }
                }
              }
                              
                                decreaseBtns.forEach(btn => {
                                  btn.addEventListener('click', function() {
                  const controls = this.closest('.cart-page__quantity-controls');
                  const input = controls ? controls.querySelector('.cart-page__quantity-input') : null;
                  if (!input) return;
                  const currentValue = parseInt(input.value, 10) || 0;
                                    if (currentValue > 0) {
                                      input.value = currentValue - 1;
                    input.dispatchEvent(new Event('change', { bubbles: true }));
                    submitCartUpdateFrom(input);
                                    }
                                  });
                                });
                              
                                increaseBtns.forEach(btn => {
                                  btn.addEventListener('click', function() {
                  const controls = this.closest('.cart-page__quantity-controls');
                  const input = controls ? controls.querySelector('.cart-page__quantity-input') : null;
                  if (!input) return;
                  const currentValue = parseInt(input.value, 10) || 0;
                                    input.value = currentValue + 1;
                  input.dispatchEvent(new Event('change', { bubbles: true }));
                  submitCartUpdateFrom(input);
                                  });
                                });
                              
                                // Remove buttons
                                const removeBtns = document.querySelectorAll('.cart-page__remove-btn');
                                removeBtns.forEach(btn => {
                                  btn.addEventListener('click', function() {
                                    const input = this.closest('.cart-page__item').querySelector('.cart-page__quantity-input');
                                    input.value = 0;
                                    // Trigger form submission to update cart
                                    const form = document.querySelector('.cart-page__form');
                                    if (form) {
                                      form.submit();
                                    }
                                  });
                                });
                              });
                              </script>
                              
