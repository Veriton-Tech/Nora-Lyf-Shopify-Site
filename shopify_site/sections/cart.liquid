{% comment %}
  Cart page with elegant product-style UI
{% endcomment %}

<style></style>

<script src="{{ 'cart.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'quantity-popover.js' | asset_url }}" defer="defer"></script>

<script>
  // Ensure cart functionality works on cart page without blocking native form submit
  document.addEventListener('DOMContentLoaded', function() {
    // Nothing to block here; allow the form to post for checkout/update
    if (!customElements.get('cart-items')) {
      console.log('Cart-items custom element not found, waiting for cart.js to load');
    }
  });
</script>

<div class="cart-page">
  <div class="cart-page__container">
    <h1 class="cart-page__title">Shopping Cart</h1>
                              
                                  {% if cart == empty %}
                                    <div class="cart-page__empty">
                                      <div class="cart-page__empty-content">
                                        <div class="cart-page__empty-icon">
                                          <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <circle cx="9" cy="21" r="1"></circle>
                                            <circle cx="20" cy="21" r="1"></circle>
                                            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                                          </svg>
                                        </div>
                                        <h2 class="cart-page__empty-text">Your cart is empty</h2>
                                        <p class="cart-page__empty-description">Looks like you haven't added any items to your cart yet.</p>
                                        <a href="{{ routes.all_products_collection_url }}" class="cart-page__continue-shopping">
                                          Continue Shopping
                                        </a>
                                      </div>
                                    </div>
                                  {% else %}
                                    <div class="cart-page__content">
                                      <form action="{{ routes.cart_url }}" method="post" class="cart-page__form">
                                        <cart-items id="main-cart-items" data-id="{{ section.id }}">
                                          <div class="cart-page__items">
                                            {%- for item in cart.items -%}
                                              <div class="cart-page__item" id="CartPage-Item-{{ item.index | plus: 1 }}">
                                                <div class="cart-page__item-image">
                                                  {% if item.image %}
                                                    <a href="{{ item.url }}" class="cart-page__item-link">
                                                      <img 
                                                        src="{{ item.image | img_url: '150x150' }}" 
                                                        alt="{{ item.title }}" 
                                                        class="cart-page__item-img"
                                                        loading="lazy"
                                                        width="150"
                                                        height="150">
                                                    </a>
                                                  {% else %}
                                                    <div class="cart-page__item-placeholder">
                                                      <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                                        <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                                        <polyline points="21,15 16,10 5,21"></polyline>
                                                      </svg>
                                                    </div>
                                                  {% endif %}
                                                </div>
                              
                                                <div class="cart-page__item-info">
                                                  <div class="cart-page__item-header">
                                                    <h3 class="cart-page__item-name">
                                                      <a href="{{ item.url }}" class="cart-page__item-name-link">{{ item.product.title }}</a>
                                                    </h3>
                                                    
                                                    {% if item.vendor != blank %}
                                                      <p class="cart-page__item-brand">{{ item.vendor }}</p>
                                                    {% endif %}
                              
                                                    {% unless item.product.has_only_default_variant %}
                                                      <div class="cart-page__item-variant">
                                                        {% for option in item.options_with_values %}
                                                          <span class="cart-page__item-option">{{ option.name }}: {{ option.value }}</span>
                                                        {% endfor %}
                                                      </div>
                                                    {% endunless %}
                                                  </div>
                              
                                                  <div class="cart-page__item-price">
                                                    {%- if item.original_line_price != item.final_line_price -%}
                                                      <div class="cart-page__item-discounted-prices">
                                                        <span class="cart-page__item-old-price">
                                                          {{ item.original_line_price | money_without_currency }} ₹
                                                        </span>
                                                        <span class="cart-page__item-current-price">
                                                          {{ item.final_line_price | money_without_currency }} ₹
                                                        </span>
                                                      </div>
                                                    {%- else -%}
                                                      <span class="cart-page__item-current-price">
                                                                    {{ item.original_line_price | money_without_currency }} ₹
                                                      </span>
                                                    {%- endif -%}
                                                  </div>
                                                </div>
                              
                                                <div class="cart-page__item-quantity">
                                                  <label class="cart-page__quantity-label">Quantity:</label>
                                                  <div class="cart-page__quantity-wrapper">
                                                    <div class="cart-page__quantity-controls">
                                                      <button 
                                                        type="button" 
                                                        class="cart-page__quantity-btn" 
                                                        data-action="decrease"
                                                        data-variant-id="{{ item.variant.id }}">
                                                        <span class="svg-wrapper">
                                                          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                            <line x1="5" y1="12" x2="19" y2="12"></line>
                                                          </svg>
                                                        </span>
                                                      </button>
                                                      <input 
                                                        type="number" 
                                                        name="updates[]" 
                                                        value="{{ item.quantity }}" 
                                                        min="0"
                                                        class="cart-page__quantity-input"
                                                        data-variant-id="{{ item.variant.id }}">
                                                      <button 
                                                        type="button" 
                                                        class="cart-page__quantity-btn" 
                                                        data-action="increase"
                                                        data-variant-id="{{ item.variant.id }}">
                                                        <span class="svg-wrapper">
                                                          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                            <line x1="12" y1="5" x2="12" y2="19"></line>
                                                            <line x1="5" y1="12" x2="19" y2="12"></line>
                                                          </svg>
                                                        </span>
                                                      </button>
                                                    </div>
                                                  </div>
                                                </div>
                              
                                                <div class="cart-page__item-actions">
                                                  <button 
                                                    type="button" 
                                                    class="cart-page__remove-btn"
                                                    data-variant-id="{{ item.variant.id }}">
                                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                      <polyline points="3,6 5,6 21,6"></polyline>
                                                      <path d="M19,6v14a2,2 0 0,1 -2,2H7a2,2 0 0,1 -2,-2V6m3,0V4a2,2 0 0,1 2,-2h4a2,2 0 0,1 2,2v2"></path>
                                                      <line x1="10" y1="11" x2="10" y2="17"></line>
                                                      <line x1="14" y1="11" x2="14" y2="17"></line>
                                                    </svg>
                                                    Remove
                                                  </button>
                                                </div>
                                              </div>
                                            {%- endfor -%}
