{{ 'getsupp-shipping-policy.css' | asset_url | stylesheet_tag }}

<div class="getsupp-policy-page">
  <div class="policy-container">
    <h1 class="policy-title">{{ section.settings.title | default: 'Shipping Policy - Nora Lyf' }}</h1>

    <div class="policy-content">
      <ul>
        <li>Orders are processed within 1–2 business days.</li>
        <li>Delivery timelines vary by location (typically 3–7 business days within India).</li>
        <li>Tracking details will be shared via email/SMS.</li>
      </ul>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Shipping Policy",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Page Title",
        "default": "Shipping Policy - Nora Lyf"
      }
    ],
    "presets": [
      {
        "name": "Shipping Policy"
      }
    ]
  }
{% endschema %}