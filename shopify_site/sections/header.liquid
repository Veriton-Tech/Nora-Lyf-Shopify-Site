    justify-content: center;
    font-size: 10px;
    font-weight: bold;
  }

  .getsupp-account a {
    display: block;
    padding: 8px;
  }

  .getsupp-account svg {
    width: 20px;
    height: 20px;
    color: #000;
  }

  /* Navigation Styles */
  .getsupp-navigation {
    background: #f0f0f0;
    background-opacity: 0.5;
  }

  .getsupp-nav-container {
    max-width: 1180px;
    margin: 0 auto;
    padding: 0 16px;
  }

  .getsupp-nav-list {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    overflow: visible;
  }

  .getsupp-nav-item {
    position: relative;
  }

  .getsupp-nav-link {
    display: flex;
    align-items: center;
    padding: 11px 20px;
    font-size: 16px;
    font-weight: 500;
    color: #000;
    text-decoration: none;
    cursor: pointer;
    transition: color 0.2s;
  }

  .getsupp-nav-link:hover {
    color: #24BAAD;
  }

  /* Mega Menu Styles */
  .getsupp-mega-menu {
    position: absolute;
    top: 45px;
    left: 14%;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s;
    z-index: 50;
  }

  .getsupp-nav-item:hover .getsupp-mega-menu {
    opacity: 1;
    pointer-events: auto;
  }

  .getsupp-mega-content {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
    padding: 16px;
    width: 780px;
    background: white;
    border-radius: 8px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
    border: 1px solid #e5e5e5;
    min-height: 320px;
    overflow: auto;
  }

  .getsupp-mega-column {
    display: flex;
    flex-direction: column;
  }

  .getsupp-mega-title {
    font-size: 14px;
    font-weight: bold;
    color: #24BAAD;
    background: #eaf1f3;
    padding: 4px 8px;
    border-radius: 4px;
    margin: 0 0 8px;
    border-left: 3px solid #24BAAD;
  }

  .getsupp-mega-links {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .getsupp-mega-links li {
    margin-bottom: 4px;
  }

  .getsupp-mega-links a {
    display: block;
    padding: 4px 8px;
    font-size: 14px;
    color: #000;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.2s;
  }

  .getsupp-mega-links a:hover {
    color: #24BAAD;
    font-weight: bold;
    background: #f0fdfc;
  }

  /* Brands Menu Special Styling */
  .getsupp-brands-menu .getsupp-mega-content {
    grid-template-columns: 1fr;
    width: 320px;
    max-height: 70vh;
  }

  /* Mobile Responsive */
  @media (max-width: 1024px) {
    .getsupp-search {
      display: none;
    }

    .getsupp-mobile-search {
      display: block;
    }

    .getsupp-navigation {
      display: none;
    }
  }

  @media (min-width: 1025px) {
    .getsupp-mobile-menu {
      display: none;
    }

    .getsupp-mobile-search {
      display: none;
    }
  }
