{% comment %} 
    GetSupp Hero Banner Section - Screenshot 2 Design 
    Displays a centered hero with shield icon and navigation links
{% endcomment %}

<div class="getsupp-hero-banner">
  <div class="getsupp-hero-container">
    <div class="getsupp-hero-content">
      <div class="getsupp-hero-icon">
        <svg
          width="120"
          height="120"
          viewBox="0 0 120 120"
          fill="none"
          xmlns="http://www.w3.org/2000/svg">
          <path d="M60 10L100 30V60C100 85 60 110 60 110S20 85 20 60V30L60 10Z" fill="#24BAAD" />
          <path
            d="M45 55L52 62L75 39"
            stroke="white"
            stroke-width="4"
            stroke-linecap="round"
            stroke-linejoin="round" />
        </svg>
      </div>
      <h1 class="getsupp-hero-title">{{ section.settings.title | default: "Transform your Health with Getsupp" }}</h1>
      <div class="getsupp-hero-links">
        <a href="{{ section.settings.link1_url | default: '/collections/all' }}" class="getsupp-hero-link">
          {{ section.settings.link1_text | default: "Right Products" }}
          <svg
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg">
            <path
              d="M5 12H19M19 12L12 5M19 12L12 19"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round" />
          </svg>
        </a>
        <a href="{{ section.settings.link2_url | default: '/pages/expert-guidance' }}" class="getsupp-hero-link">
          {{ section.settings.link2_text | default: "Expert Guidance" }}
          <svg
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg">
            <path
              d="M5 12H19M19 12L12 5M19 12L12 19"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round" />
          </svg>
        </a>
        <a href="{{ section.settings.link3_url | default: '/pages/results' }}" class="getsupp-hero-link">
          {{ section.settings.link3_text | default: "Right Results" }}
          <svg
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg">
            <path
              d="M5 12H19M19 12L12 5M19 12L12 19"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round" />
          </svg>
        </a>
      </div>
      <p class="getsupp-hero-description">{{ section.settings.description | default: "Shop 100% genuine health products from more than 300+ brands" }}</p>
    </div>
  </div>
</div>

{% stylesheet %}
  .getsupp-hero-banner {
    background: #fafafa;
    padding: 80px 0;
    margin-bottom: 60px;
  }

  .getsupp-hero-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .getsupp-hero-content {
    text-align: center;
    max-width: 800px;
  }

  .getsupp-hero-icon {
    margin-bottom: 30px;
    display: flex;
    justify-content: center;
  }

  .getsupp-hero-title {
    font-size: 48px;
    font-weight: 700;
    color: #000;
    line-height: 1.2;
    margin-bottom: 30px;
    font-family: 'Inter'
    , sans-serif;
  }

  .getsupp-hero-links {
    display: flex;
    justify-content: center;
    gap: 40px;
    margin-bottom: 30px;
    flex-wrap: wrap;
  }

  .getsupp-hero-link {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #24BAAD;
    text-decoration: none;
    font-size: 18px;
    font-weight: 600;
    transition: color 0.3s ease;
  }

  .getsupp-hero-link:hover {
    color: #1ea89a;
  }

  .getsupp-hero-description {
    font-size: 18px;
    color: #666;
    line-height: 1.6;
    margin: 0;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .getsupp-hero-banner {
      padding: 48px 0;
    }

    .getsupp-hero-title {
      font-size: 32px;
    }

    .getsupp-hero-links {
      gap: 20px;
    }

    .getsupp-hero-link {
      font-size: 16px;
    }

    .getsupp-hero-description {
      font-size: 16px;
    }
  }

  @media (max-width: 480px) {
    .getsupp-hero-title {
      font-size: 24px;
      line-height: 1.25;
    }
    .getsupp-hero-container {
      padding: 0 16px;
    }
    .getsupp-hero-content {
      max-width: 100%;
    }
    .getsupp-hero-icon svg {
      width: 80px;
      height: 80px;
    }

    .getsupp-hero-links {
      flex-direction: column;
      gap: 12px;
    }
    .getsupp-hero-link {
      font-size: 15px;
    }
    .getsupp-hero-description {
      font-size: 14px;
    }
  }
{% endstylesheet %}

