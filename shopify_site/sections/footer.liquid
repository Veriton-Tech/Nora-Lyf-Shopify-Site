<!-- GetSupp Footer -->
<footer class="getsupp-footer">
  <div class="getsupp-footer-container">
    <div class="getsupp-footer-content">
      <!-- Top Section: Brand Name and Navigation -->
      <div class="getsupp-footer-top">
        <!-- Left: Brand Name -->
        <div class="getsupp-footer-left">
          <h1 class="getsupp-footer-brand">GETSUPP</h1>
        </div>

        <!-- Right: Navigation Links -->
        <div class="getsupp-footer-nav">
          <a href="/pages/contact-us" class="getsupp-nav-link">Contact Us</a>
          <span class="getsupp-nav-separator">|</span>
          <a href="/pages/shipping-policy" class="getsupp-nav-link">Shipping Policy</a>
          <span class="getsupp-nav-separator">|</span>
          <a href="/pages/privacy-policy" class="getsupp-nav-link">Privacy Policy</a>
          <span class="getsupp-nav-separator">|</span>
          <a href="/pages/terms-conditions" class="getsupp-nav-link">Terms & Conditions</a>
          <span class="getsupp-nav-separator">|</span>
          <a href="/pages/returns-cancellations" class="getsupp-nav-link">Returns & Cancellations</a>
        </div>
      </div>

      <!-- Bottom Section: Follow Us and Social Media -->
      <div class="getsupp-footer-middle">
        <div class="getsupp-footer-social">
          <h3 class="getsupp-social-title">Follow Us</h3>
          <div class="getsupp-social-icons">
            <a href="#" class="getsupp-social-link facebook">
              {{- 'icon-facebook.svg' | inline_asset_content -}}
            </a>
            <a href="#" class="getsupp-social-link youtube">
              {{- 'icon-youtube.svg' | inline_asset_content -}}
            </a>
            <a href="#" class="getsupp-social-link twitter">
              {{- 'icon-twitter.svg' | inline_asset_content -}}
            </a>
            <a href="#" class="getsupp-social-link instagram">
              {{- 'icon-instagram.svg' | inline_asset_content -}}
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer Bottom: Copyright -->
    <div class="getsupp-footer-bottom">
      <p class="getsupp-footer-copy">&copy; 2025, GetSupp. All rights reserved.</p>
    </div>
  </div>
</footer>

{% stylesheet %}
  /* ====== GetSupp Footer ====== */
  .getsupp-footer {
    background: #24BAAD;
    margin-top: 60px;
    font-family: 'Inter'
    , sans-serif;
  }
  .getsupp-footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  .getsupp-footer-content {
    padding: 40px 0;
  }

  /* Top Section: Brand and Navigation */
  .getsupp-footer-top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 30px;
  }

  /* Left Section: Brand */
  .getsupp-footer-left {
    flex: 1;
  }
  .getsupp-footer-brand {
    font-size: 48px;
    font-weight: 900;
    color: #FFFFFF;
    margin: 0;
    letter-spacing: 2px;
    line-height: 1;
    white-space: nowrap;
  }

  /* Navigation Section */
  .getsupp-footer-nav {
    display: flex;
    align-items: center;
    gap: 4px;
    flex-wrap: nowrap;
  }
  .getsupp-nav-link {
    color: #FFFFFF;
    text-decoration: none;
    font-size: 10px;
    font-weight: 500;
    transition: color 0.3s ease;
    white-space: nowrap;
  }
  .getsupp-nav-link:hover {
    color: #E8F4FD;
  }
  .getsupp-nav-separator {
    color: #FFFFFF;
    font-size: 10px;
    font-weight: 300;
  }

  /* Middle Section: Follow Us and Social Media */
  .getsupp-footer-middle {
    display: flex;
    align-items: flex-start;
  }
  .getsupp-footer-social {
    text-align: left;
  }
  .getsupp-social-title {
    font-size: 16px;
    font-weight: 600;
    color: #FFFFFF;
    margin: 0 0 15px;
  }
  .getsupp-social-icons {
    display: flex;
    gap: 12px;
    justify-content: flex-start;
  }
  .getsupp-social-link {
    display: flex;
    width: 40px;
    height: 40px;
    align-items: center;
    justify-content: center;
    background: #FFFFFF;
    color: #24BAAD;
    border-radius: 50%;
    transition: all 0.3s ease;
    text-decoration: none;
  }
  .getsupp-social-link:hover {
    background: #E8F4FD;
    transform: translateY(-2px);
  }
  .getsupp-social-link svg {
    width: 20px;
    height: 20px;
    fill: currentColor;
  }

  /* Bottom Section: Copyright */
  .getsupp-footer-bottom {
    text-align: center;
    padding: 20px 0;
    border-top: 1px solid #1ea89a;
  }
  .getsupp-footer-copy {
    font-size: 14px;
    color: #FFFFFF;
    margin: 0;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .getsupp-footer-top {
      flex-direction: column;
      text-align: center;
      gap: 20px;
    }
    .getsupp-footer-brand {
      font-size: 36px;
    }
    .getsupp-footer-nav {
      justify-content: center;
      flex-wrap: wrap;
    }
    .getsupp-nav-separator {
      display: none;
    }
    .getsupp-footer-social {
      text-align: center;
    }
    .getsupp-social-icons {
      justify-content: center;
    }
  }
{% endstylesheet %}

