{% comment %}
  Product details section for GetSupp-style product pages
{% endcomment %}

<div class="product-details">
  <div class="container">
    <div class="product-details__grid">
      <div class="product-details__images">
        <div class="product-details__main-image">
          {% if product.featured_image %}
            {% render 'image', image: product.featured_image, alt: product.title, class: 'product-details__image' %}
          {% else %}
            <div class="product-details__placeholder">
              <svg width="100" height="100" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                <circle cx="8.5" cy="8.5" r="1.5"></circle>
                <polyline points="21,15 16,10 5,21"></polyline>
              </svg>
            </div>
          {% endif %}
        </div>
        
        {% if product.images.size > 1 %}
          <div class="product-details__thumbnails">
            {% for image in product.images limit: 4 %}
              <div class="product-details__thumbnail">
                {% render 'image', image: image, alt: product.title, class: 'product-details__thumbnail-image' %}
              </div>
            {% endfor %}
          </div>
        {% endif %}
      </div>
      
      <div class="product-details__info">
        <div class="product-details__header">
          <h1 class="product-details__title">{{ product.title }}</h1>
          
          {% if product.vendor != blank %}
            <p class="product-details__brand">{{ product.vendor }}</p>
          {% endif %}
          
          <div class="product-details__rating">
            <div class="product-details__stars">
              {% for i in (1..5) %}
                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                  <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26"></polygon>
                </svg>
              {% endfor %}
            </div>
            <span class="product-details__rating-text">(4.5) 128 reviews</span>
          </div>
        </div>
        
        <div class="product-details__price">
          {% if product.compare_at_price > product.price %}
            <span class="product-details__price-compare">{{ product.compare_at_price | money }}</span>
            <span class="product-details__price-sale">{{ product.price | money }}</span>
            <span class="product-details__discount">
              Save {{ product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price }}%
            </span>
          {% else %}
            <span class="product-details__price-regular">{{ product.price | money }}</span>
          {% endif %}
        </div>
        
        <div class="product-details__description">
          {{ product.description }}
        </div>
        
        <form action="/cart/add" method="post" enctype="multipart/form-data" class="product-details__form">
          {% unless product.has_only_default_variant %}
            <div class="product-details__variants">
              {% for option in product.options_with_values %}
                <div class="product-details__option">
                  <label class="product-details__option-label">{{ option.name }}</label>
                  <select name="id" class="product-details__option-select">
                    {% for value in option.values %}
                      <option value="{{ product.variants[forloop.index0].id }}">{{ value }}</option>
                    {% endfor %}
                  </select>
                </div>
              {% endfor %}
            </div>
          {% endunless %}
          
          <div class="product-details__quantity">
            <label class="product-details__quantity-label">Quantity:</label>
            <div class="product-details__quantity-controls">
              <button type="button" class="product-details__quantity-btn" data-action="decrease">-</button>
              <input type="number" name="quantity" value="1" min="1" class="product-details__quantity-input">
              <button type="button" class="product-details__quantity-btn" data-action="increase">+</button>
            </div>
          </div>
          
          <div class="product-details__actions">
            <button type="submit" class="product-details__add-to-cart">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="9" cy="21" r="1"></circle>
                <circle cx="20" cy="21" r="1"></circle>
                <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
              </svg>
              Add to Cart
            </button>
            
            <button type="button" class="product-details__buy-now">
              Buy Now
            </button>
          </div>
        </form>
        
        <div class="product-details__features">
          <div class="product-details__feature">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 12l2 2 4-4"></path>
              <path d="M21 12c-1 0-3-1-3-3s2-3 3-3 3 1 3 3-2 3-3 3"></path>
              <path d="M3 12c1 0 3-1 3-3s-2-3-3-3-3 1-3 3 2 3 3 3"></path>
              <path d="M12 3c0 1-1 3-3 3s-3-2-3-3 1-3 3-3 3 2 3 3"></path>
              <path d="M12 21c0-1 1-3 3-3s3 2 3 3-1 3-3 3-3-2-3-3"></path>
            </svg>
            <span>100% Authentic</span>
          </div>
          
          <div class="product-details__feature">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
            </svg>
            <span>Free Shipping</span>
          </div>
          
          <div class="product-details__feature">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 12l2 2 4-4"></path>
              <path d="M21 12c-1 0-3-1-3-3s2-3 3-3 3 1 3 3-2 3-3 3"></path>
              <path d="M3 12c1 0 3-1 3-3s-2-3-3-3-3 1-3 3 2 3 3 3"></path>
              <path d="M12 3c0 1-1 3-3 3s-3-2-3-3 1-3 3-3 3 2 3 3"></path>
              <path d="M12 21c0-1 1-3 3-3s3 2 3 3-1 3-3 3-3-2-3-3"></path>
            </svg>
            <span>Easy Returns</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  .product-details {
    padding: 2rem 0;
  }
  
  .product-details__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: start;
  }
  
  .product-details__images {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .product-details__main-image {
    aspect-ratio: 1;
    border-radius: 8px;
    overflow: hidden;
    background: #f8f9fa;
  }
  
  .product-details__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .product-details__placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    color: #6c757d;
  }
  
  .product-details__thumbnails {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0.5rem;
  }
  
  .product-details__thumbnail {
    aspect-ratio: 1;
    border-radius: 4px;
    overflow: hidden;
    cursor: pointer;
    border: 2px solid transparent;
    transition: border-color 0.2s;
  }
  
  .product-details__thumbnail:hover {
    border-color: #24BAAD;
  }
  
  .product-details__thumbnail-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .product-details__title {
    font-size: 2rem;
    font-weight: 700;
    color: #2c3e50;
    margin: 0 0 0.5rem 0;
  }
  
  .product-details__brand {
    color: #24BAAD;
    font-weight: 600;
    margin: 0 0 1rem 0;
  }
  
  .product-details__rating {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }
  
  .product-details__stars {
    display: flex;
    color: #ffc107;
  }
  
  .product-details__rating-text {
    color: #6c757d;
    font-size: 0.9rem;
  }
  
  .product-details__price {
    margin-bottom: 1.5rem;
  }
  
  .product-details__price-regular {
    font-size: 1.5rem;
    font-weight: 700;
    color: #2c3e50;
  }
  
  .product-details__price-compare {
    font-size: 1.2rem;
    color: #6c757d;
    text-decoration: line-through;
    margin-right: 0.5rem;
  }
  
  .product-details__price-sale {
    font-size: 1.5rem;
    font-weight: 700;
    color: #e74c3c;
    margin-right: 0.5rem;
  }
  
  .product-details__discount {
    background: #e74c3c;
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: 600;
  }
  
  .product-details__description {
    margin-bottom: 2rem;
    line-height: 1.6;
    color: #495057;
  }
  
  .product-details__form {
    margin-bottom: 2rem;
  }
  
  .product-details__variants {
    margin-bottom: 1.5rem;
  }
  
  .product-details__option {
    margin-bottom: 1rem;
  }
  
  .product-details__option-label {
    display: block;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #2c3e50;
  }
  
  .product-details__option-select {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #ced4da;
    border-radius: 4px;
    background: white;
    font-size: 1rem;
  }
  
  .product-details__quantity {
    margin-bottom: 1.5rem;
  }
  
  .product-details__quantity-label {
    display: block;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #2c3e50;
  }
  
  .product-details__quantity-controls {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .product-details__quantity-btn {
    width: 40px;
    height: 40px;
    border: 1px solid #ced4da;
    background: white;
    border-radius: 4px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    font-weight: 600;
  }
  
  .product-details__quantity-btn:hover {
    background: #f8f9fa;
  }
  
  .product-details__quantity-input {
    width: 80px;
    height: 40px;
    text-align: center;
    border: 1px solid #ced4da;
    border-radius: 4px;
    font-size: 1rem;
  }
  
  .product-details__actions {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
  }
  
  .product-details__add-to-cart {
    flex: 1;
    background: #24BAAD;
    color: white;
    border: none;
    padding: 1rem 2rem;
    border-radius: 4px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    transition: background-color 0.2s;
  }
  
  .product-details__add-to-cart:hover {
    background: #1ea896;
  }
  
  .product-details__buy-now {
    flex: 1;
    background: #2c3e50;
    color: white;
    border: none;
    padding: 1rem 2rem;
    border-radius: 4px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.2s;
  }
  
  .product-details__buy-now:hover {
    background: #34495e;
  }
  
  .product-details__features {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .product-details__feature {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #24BAAD;
    font-weight: 500;
  }
  
  @media (max-width: 768px) {
    .product-details__grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .product-details__actions {
      flex-direction: column;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Product Details",
  "settings": []
}
{% endschema %}
