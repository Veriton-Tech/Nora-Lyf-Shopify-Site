{% comment %}
  GetSupp Collection Products Section
  Displays products in a grid layout with pagination
{% endcomment %}

<div class="getsupp-collection-products">
  <div class="getsupp-collection-container">
    {%- liquid
      assign collection_handle = collection.handle
      assign has_products = false
      if collection.products.size > 0
        assign has_products = true
      endif
    -%}

    {% if has_products %}
      <div class="getsupp-products-grid">
        {% for product in collection.products %}
          <div class="getsupp-product-card">
            <a href="{{ product.url }}" class="getsupp-product-link">
              <div class="getsupp-product-image">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | img_url: '300x300' }}"
                    alt="{{ product.title }}"
                    class="getsupp-product-img"
                    width="300"
                    height="300">
                {% else %}
                  <div class="getsupp-product-placeholder">
                    <svg
                      width="60"
                      height="60"
                      viewBox="0 0 24 24"
                      fill="none"
                      xmlns="http://www.w3.org/2000/svg">
                      <rect
                        x="3"
                        y="3"
                        width="18"
                        height="18"
                        rx="2"
                        stroke="#24BAAD"
                        stroke-width="2" />
                      <path
                        d="M9 9h6v6H9z"
                        stroke="#24BAAD"
                        stroke-width="2" />
                    </svg>
                  </div>
                {% endif %}
                {% if product.compare_at_price > product.price %}
                  <div class="getsupp-product-badge">Sale</div>
                {% endif %}
                {% if product.available == false %}
                  <div class="getsupp-product-sold-out-badge">Sold Out</div>
                {% endif %}
              </div>
              <div class="getsupp-product-info">
                {% if section.settings.show_vendor %}
                  <p class="getsupp-product-vendor">{{ product.vendor }}</p>
                {% endif %}
                <h3 class="getsupp-product-title">{{ product.title }}</h3>
                <div class="getsupp-product-price">
                  {% if product.compare_at_price > product.price %}
                    <span class="getsupp-price-compare">₹{{ product.compare_at_price | money_without_currency }}</span>
                    <span class="getsupp-price-current">₹{{ product.price | money_without_currency }}</span>
                  {% else %}
                    <span class="getsupp-price-current">₹{{ product.price | money_without_currency }}</span>
                  {% endif %}
                </div>
                {% if section.settings.show_rating %}
                  <div class="getsupp-product-rating">
                    <div class="getsupp-stars">
                      <span class="getsupp-star">★</span>
                      <span class="getsupp-star">★</span>
                      <span class="getsupp-star">★</span>
                      <span class="getsupp-star">★</span>
                      <span class="getsupp-star">★</span>
                    </div>
                    <span class="getsupp-rating-text">(4.5)</span>
                  </div>
                {% endif %}
              </div>
            </a>
            {% if product.available and section.settings.show_quick_add %}
              <form
                action="/cart/add"
                method="post"
                enctype="multipart/form-data"
                class="getsupp-product-form">
                <input
                  type="hidden"
                  name="id"
                  value="{{ product.selected_or_first_available_variant.id }}">
                <button type="submit" class="getsupp-add-to-cart">
                  <svg
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg">
                    <path
                      d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m0 0h8"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round" />
                  </svg>
                  Add to Cart
                </button>
              </form>
            {% endif %}
          </div>
        {% endfor %}
      </div>

      {% if paginate.pages > 1 %}
        <div class="getsupp-pagination">
          {% if paginate.previous %}
            <a href="{{ paginate.previous.url }}" class="getsupp-pagination-btn getsupp-pagination-prev">
              <svg
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                xmlns="http://www.w3.org/2000/svg">
                <path
                  d="M15 18l-6-6 6-6"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round" />
              </svg>
              Previous
            </a>
          {% endif %}

          <div class="getsupp-pagination-pages">
            {% for part in paginate.parts %}
              {% if part.is_link %}
                <a href="{{ part.url }}" class="getsupp-pagination-page">{{ part.title }}</a>
              {% else %}
                <span class="getsupp-pagination-page getsupp-pagination-current">{{ part.title }}</span>
              {% endif %}
            {% endfor %}
          </div>

          {% if paginate.next %}
            <a href="{{ paginate.next.url }}" class="getsupp-pagination-btn getsupp-pagination-next">
              Next
              <svg
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                xmlns="http://www.w3.org/2000/svg">
                <path
                  d="M9 18l6-6-6-6"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round" />
              </svg>
            </a>
          {% endif %}
        </div>
      {% endif %}
    {% else %}
      {%- comment -%} Try to filter products by category if collection is empty {%- endcomment -%}
      {% if collection_handle %}
        {% render 'category-products',  category: collection_handle,  limit: section.settings.products_per_page | default: 24, show_vendor: section.settings.show_vendor | default: false, show_rating: section.settings.show_rating | default: false
        %}
      {% else %}
        <div class="getsupp-empty-collection">
          <div class="getsupp-empty-content">
            <svg
              width="80"
              height="80"
              viewBox="0 0 24 24"
              fill="none"
              xmlns="http://www.w3.org/2000/svg">
              <rect
                x="3"
                y="3"
                width="18"
                height="18"
                rx="2"
                stroke="#24BAAD"
                stroke-width="2" />
              <path
                d="M9 9h6v6H9z"
                stroke="#24BAAD"
                stroke-width="2" />
            </svg>
            <h3>No products found</h3>
            <p>We couldn't find any products in this collection.</p>
            <a href="/collections/all" class="getsupp-empty-btn">Browse All Products</a>
          </div>
        </div>
      {% endif %}
    {% endif %}
  </div>
</div>

{% stylesheet %}
  .getsupp-collection-products {
    padding-bottom: 80px;
  }

  .getsupp-collection-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .getsupp-products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 30px;
    margin-bottom: 60px;
  }

  .getsupp-product-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    border: 1px solid #f0f0f0;
  }

  .getsupp-product-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(36, 186, 173, 0.15);
    border-color: #24BAAD;
  }

  .getsupp-product-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .getsupp-product-image {
    position: relative;
    width: 100%;
    height: 200px;
    overflow: hidden;
    background: #f8f9fa;
  }

  .getsupp-product-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .getsupp-product-card:hover .getsupp-product-img {
    transform: scale(1.05);
  }

  .getsupp-product-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f0fdfc;
  }

  .getsupp-product-badge {
    position: absolute;
    top: 12px;
    left: 12px;
    background: #ff4757;
    color: white;
    padding: 4px 8px;
    border-radius: 6px;
    font-size: 12px;
    font-weight: 600;
  }

  .getsupp-product-sold-out-badge {
    position: absolute;
    top: 12px;
    right: 12px;
    background: #666;
    color: white;
    padding: 4px 8px;
    border-radius: 6px;
    font-size: 12px;
    font-weight: 600;
  }

  .getsupp-product-info {
    padding: 20px;
  }

  .getsupp-product-vendor {
    font-size: 12px;
    color: #666;
    margin-bottom: 8px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .getsupp-product-title {
    font-size: 16px;
    font-weight: 600;
    color: #333;
    margin-bottom: 12px;
    line-height: 1.4;
    font-family: 'Inter'
    , sans-serif;
  }

  .getsupp-product-price {
    margin-bottom: 12px;
  }

  .getsupp-price-current {
    font-size: 18px;
    font-weight: 700;
    color: #24BAAD;
  }

  .getsupp-price-compare {
    font-size: 14px;
    color: #999;
    text-decoration: line-through;
    margin-right: 8px;
  }

  .getsupp-product-rating {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .getsupp-stars {
    display: flex;
    gap: 2px;
  }

  .getsupp-star {
    color: #ffd700;
    font-size: 14px;
  }

  .getsupp-rating-text {
    font-size: 12px;
    color: #666;
  }

  .getsupp-product-form {
    padding: 0 20px 20px;
  }

  .getsupp-add-to-cart {
    width: 100%;
    background: #24BAAD;
    color: white;
    border: none;
    padding: 12px 16px;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
  }

  .getsupp-add-to-cart:hover {
    background: #1ea89a;
    transform: translateY(-2px);
  }

  .getsupp-pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-top: 60px;
  }

  .getsupp-pagination-btn {
    display: flex;
    align-items: center;
    gap: 8px;
    background: white;
    color: #24BAAD;
    border: 2px solid #24BAAD;
    padding: 12px 20px;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .getsupp-pagination-btn:hover {
    background: #24BAAD;
    color: white;
  }

  .getsupp-pagination-pages {
    display: flex;
    gap: 8px;
  }

  .getsupp-pagination-page {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: white;
    color: #666;
    border: 1px solid #ddd;
    border-radius: 8px;
    font-size: 14px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .getsupp-pagination-page:hover {
    background: #f8f9fa;
    border-color: #24BAAD;
    color: #24BAAD;
  }

  .getsupp-pagination-current {
    background: #24BAAD;
    color: white;
    border-color: #24BAAD;
  }

  .getsupp-empty-collection {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 400px;
  }

  .getsupp-empty-content {
    text-align: center;
    max-width: 400px;
  }

  .getsupp-empty-content svg {
    margin-bottom: 24px;
    opacity: 0.5;
  }

  .getsupp-empty-content h3 {
    font-size: 24px;
    font-weight: 600;
    color: #333;
    margin-bottom: 12px;
  }

  .getsupp-empty-content p {
    font-size: 16px;
    color: #666;
    margin-bottom: 24px;
    line-height: 1.5;
  }

  .getsupp-empty-btn {
    display: inline-flex;
    align-items: center;
    background: #24BAAD;
    color: white;
    padding: 12px 24px;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .getsupp-empty-btn:hover {
    background: #1ea89a;
    transform: translateY(-2px);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .getsupp-products-grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
    }

    .getsupp-pagination {
      flex-direction: column;
      gap: 16px;
    }

    .getsupp-pagination-pages {
      order: -1;
    }
  }

  @media (max-width: 480px) {
    .getsupp-products-grid {
      grid-template-columns: 1fr;
    }
  }
{% endstylesheet %}

{% schema %}
  {
    "name": "GetSupp Products",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "range",
        "id": "products_per_page",
        "label": "Products per page",
        "min": 12,
        "max": 48,
        "step": 12,
        "default": 24
      },
      {
        "type": "checkbox",
        "id": "show_vendor",
        "label": "Show vendor",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_rating",
        "label": "Show rating",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_quick_add",
        "label": "Show quick add to cart",
        "default": true
      }, {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Color scheme",
        "default": "scheme-1"
      }
    ],
    "presets": [
      {
        "name": "GetSupp Products"
      }
    ]
  }
{% endschema %}