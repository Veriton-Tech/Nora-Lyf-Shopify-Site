{% comment %}
  GetSupp Collection Products Section
  Displays products in a grid layout with pagination
{% endcomment %}

<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

<div class="getsupp-collection-products">
  <div class="getsupp-collection-container">
    {%- liquid
      assign collection_handle = collection.handle
      assign has_products = false
      if collection.products.size > 0
        assign has_products = true
      endif
    -%}

    {% if has_products %}
      {%- paginate collection.products by section.settings.products_per_page -%}
        <div class="getsupp-products-grid" id="ProductGridContainer" data-products-count="{{ paginate.items }}">
          {% for product in collection.products %}
            <div class="getsupp-product-card" data-product-id="{{ product.id }}">
              <a href="{{ product.url }}" class="getsupp-product-link">
                <div class="getsupp-product-image">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | img_url: '300x300' }}"
                      alt="{{ product.title }}"
                      class="getsupp-product-img"
                      width="300"
                      height="300"
                      loading="lazy"
                      decoding="async">
                  {% else %}
                    <div class="getsupp-product-placeholder">
                      <svg
                        width="60"
                        height="60"
                        viewBox="0 0 24 24"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg">
                        <rect
                          x="3"
                          y="3"
                          width="18"
                          height="18"
                          rx="2"
                          stroke="#04683F"
                          stroke-width="2" />
                        <path
                          d="M9 9h6v6H9z"
                          stroke="#04683F"
                          stroke-width="2" />
                      </svg>
                    </div>
                  {% endif %}
                {% if product.compare_at_price > product.price %}
                  <div class="getsupp-product-badge">Sale</div>
                {% endif %}
                {% if product.available == false %}
                  <div class="getsupp-product-sold-out-badge">Sold Out</div>
                {% endif %}
              </div>
              <div class="getsupp-product-info">
                {% if section.settings.show_rating %}
                  <!-- Enhanced Rating Display for Social Proof -->
                  <div class="getsupp-product-rating-prominent">
                    <div class="getsupp-stars-large">
                      <span class="getsupp-star-large">★</span>
                      <span class="getsupp-star-large">★</span>
                      <span class="getsupp-star-large">★</span>
                      <span class="getsupp-star-large">★</span>
                      <span class="getsupp-star-large">★</span>
                    </div>
                    <div class="getsupp-rating-details">
                      <span class="getsupp-rating-score">4.7</span>
                      <span class="getsupp-review-count-prominent">({{ 180 | plus: forloop.index | times: 5 }} reviews)</span>
                    </div>
                  </div>
                {% endif %}
                {% if section.settings.show_vendor %}
                  <p class="getsupp-product-vendor">{{ product.vendor }}</p>
                {% endif %}
                {%- comment -%}
                  Show product category/tag pill similar to card-product snippet
                {%- endcomment -%}
                {%- if product.type != blank -%}
                  <div class="card__category">
                    <span class="card__category-tag">{{ product.type }}</span>
                  </div>
                {%- else -%}
                  {%- assign _category_label = '' -%}
                  {%- for t in product.tags -%}
                    {%- assign t_down = t | downcase -%}
                    {%- if t_down == 'ayurvedic' or t_down == 'organic' or t_down == 'herbal' or t_down == 'ayurveda' -%}
                      {%- assign _category_label = t | capitalize -%}
                      {%- break -%}
                    {%- endif -%}
                  {%- endfor -%}
                  {%- if _category_label == '' and product.tags.size > 0 -%}
                    {%- assign _category_label = product.tags.first | capitalize -%}
                  {%- endif -%}
                  {%- if _category_label != '' -%}
                    <div class="card__category">
                      <span class="card__category-tag">{{ _category_label }}</span>
                    </div>
                  {%- endif -%}
                {%- endif -%}

                <h3 class="getsupp-product-title">{{ product.title }}</h3>
                <div class="getsupp-product-price">
                  {% assign discount_percentage = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price %}
                  {% assign discount_amount = product.compare_at_price | minus: product.price %}

                  {% if product.compare_at_price > product.price %}
                    <div class="getsupp-price-with-discount">
                      <div class="getsupp-discount-badges">
                        <span class="getsupp-discount-percentage">-{{ discount_percentage }}%</span>
                        <span class="getsupp-discount-savings">Save ₹{{ discount_amount | money_without_currency }}</span>
                      </div>
                      <div class="getsupp-price-comparison">
                        <span class="getsupp-price-compare">₹{{ product.compare_at_price | money_without_currency }}</span>
                        <span class="getsupp-price-current">₹{{ product.price | money_without_currency }}</span>
                      </div>
                    </div>
                  {% else %}
                    <div class="getsupp-price-regular">
                      <span class="getsupp-price-current">₹{{ product.price | money_without_currency }}</span>
                    </div>
                  {% endif %}
                </div>
              </div>
            </a>
            <!-- Spacer to push buttons to bottom -->
            <div class="getsupp-card-spacer"></div>
            {% if product.available and section.settings.show_quick_add %}
              <product-form data-section-id="{{ section.id }}" data-show-notification="true">
                <form
                  action="{{ routes.cart_add_url }}"
                  method="post"
                  enctype="multipart/form-data"
                  class="getsupp-product-form"
                  data-type="add-to-cart-form">
                  <input
                    type="hidden"
                    name="id"
                    value="{{ product.selected_or_first_available_variant.id }}"
                    class="product-variant-id">
                  <button type="submit" class="getsupp-add-to-cart" name="add">
                  <svg
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg">
                    <path
                      d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m0 0h8"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round" />
                  </svg>
                  Add to Cart
                  {%- render 'loading-spinner' -%}
                </button>
              </form>
              </product-form>
            {% endif %}
          </div>
        {% endfor %}
        </div>

        {% if paginate.pages > 1 %}
          <div class="getsupp-pagination">
            {% if paginate.previous %}
              <a href="{{ paginate.previous.url }}" class="getsupp-pagination-btn getsupp-pagination-prev">
                <svg
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg">
                  <path
                    d="M15 18l-6-6 6-6"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round" />
                </svg>
                Previous
              </a>
            {% endif %}

            <div class="getsupp-pagination-pages">
              {% for part in paginate.parts %}
                {% if part.is_link %}
                  <a href="{{ part.url }}" class="getsupp-pagination-page">{{ part.title }}</a>
                {% else %}
                  <span class="getsupp-pagination-page getsupp-pagination-current">{{ part.title }}</span>
                {% endif %}
              {% endfor %}
            </div>

            {% if paginate.next %}
              <a href="{{ paginate.next.url }}" class="getsupp-pagination-btn getsupp-pagination-next">
                Next
                <svg
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg">
                  <path
                    d="M9 18l6-6-6-6"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round" />
                </svg>
              </a>
            {% endif %}
          </div>
        {% endif %}
      {%- endpaginate -%}
    {% else %}
      {%- comment -%} Try to filter products by category if collection is empty {%- endcomment -%}
      {% if collection_handle %}
        {% render 'category-products', category: collection_handle, limit: section.settings.products_per_page | default: 24, show_vendor: section.settings.show_vendor | default: false, show_rating: section.settings.show_rating | default: false
        %}
      {% else %}
        <div class="getsupp-empty-collection">
          <div class="getsupp-empty-content">
            <svg
              width="80"
              height="80"
              viewBox="0 0 24 24"
              fill="none"
              xmlns="http://www.w3.org/2000/svg">
              <rect
                x="3"
                y="3"
                width="18"
                height="18"
                rx="2"
                stroke="#24BAAD"
                stroke-width="2" />
              <path
                d="M9 9h6v6H9z"
                stroke="#24BAAD"
                stroke-width="2" />
            </svg>
            <h3>No products found</h3>
            <p>We couldn't find any products in this collection.</p>
            <a href="/collections/all" class="getsupp-empty-btn">Browse All Products</a>
          </div>
        </div>
      {% endif %}
    {% endif %}
  </div>
</div>

{% stylesheet %}
  .getsupp-collection-products {
    padding-bottom: 80px;
  }

  .getsupp-collection-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Mobile responsive padding for collection container - matching featured products */
  @media (max-width: 480px) {
    .getsupp-collection-container {
      padding: 0 1rem;
    }
  }

  .getsupp-products-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 30px;
    margin-bottom: 60px;
  }

  /* Responsive adjustments for collection grid with smooth scaling */
  @media (max-width: 1200px) {
    .getsupp-products-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 25px;
    }
    
    .getsupp-product-title {
      font-size: 15px;
    }
    
    .getsupp-price-current {
      font-size: 17px;
    }
  }

  @media (max-width: 900px) {
    .getsupp-products-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 30px;
      padding: 0 10px;
    }
    
    .getsupp-product-card {
      min-height: 450px;
    }
    
    .getsupp-product-title {
      font-size: 14px;
    }
    
    .getsupp-star-large {
      font-size: 16px;
    }
  }

  @media (max-width: 600px) {
    .getsupp-products-grid {
      grid-template-columns: 1fr;
      gap: 35px;
      padding: 0 5px;
    }
    
    .getsupp-product-card {
      min-height: 400px;
      border-radius: 12px;
    }
    
    .getsupp-product-title {
      font-size: 16px;
      line-height: 1.3;
    }
    
    .getsupp-product-price {
      margin-bottom: 16px;
    }
    
    .getsupp-discount-badges {
      gap: 6px;
    }
    
    .getsupp-discount-percentage,
    .getsupp-discount-savings {
      font-size: 11px;
      padding: 3px 6px;
    }
  }

  @media (max-width: 480px) {
    .getsupp-collection-container {
      padding: 0 1rem;
    }
    
    .getsupp-products-grid {
      gap: 25px;
      padding: 0;
    }
    
    .getsupp-product-info {
      padding: 16px;
    }
    
    .getsupp-product-form {
      padding: 0 16px 16px;
    }
    
    .getsupp-add-to-cart {
      padding: 14px 16px;
      font-size: 15px;
    }
  }

  .getsupp-product-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid #f0f0f0;
    display: flex;
    flex-direction: column;
    height: 100%;
    min-height: 500px;
    position: relative;
    transform: translateZ(0); /* Enable hardware acceleration */
  }

  .getsupp-product-card:hover {
    transform: translateY(-8px) translateZ(0);
    box-shadow: 0 12px 40px rgba(4, 104, 63, 0.15);
    border-color: #04683F;
  }

  .getsupp-product-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    transition: color 0.2s ease;
  }

  .getsupp-product-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    will-change: transform;
  }

  .getsupp-product-card:hover .getsupp-product-img {
    transform: scale(1.05);
  }

  /* Enhanced mobile touch interactions */
  @media (hover: none) and (pointer: coarse) {
    .getsupp-product-card:hover {
      transform: none;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      border-color: #f0f0f0;
    }
    
    .getsupp-product-card:hover .getsupp-product-img {
      transform: none;
    }
    
    .getsupp-product-card:active {
      transform: scale(0.98);
      transition: transform 0.1s ease;
    }
    
    .getsupp-add-to-cart:active {
      transform: scale(0.95);
      background: #035a3a;
    }
  }

  .getsupp-product-image {
    position: relative;
    width: 100%;
    height: 200px;
    overflow: hidden;
    background: #f8f9fa;
  }

  .getsupp-product-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .getsupp-product-card:hover .getsupp-product-img {
    transform: scale(1.05);
  }

  .getsupp-product-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f0fdfc;
  }

  .getsupp-product-badge,
  .getsupp-product-sold-out-badge {
    position: absolute;
    top: 12px;
    color: white;
    padding: 4px 8px;
    border-radius: 6px;
    font-size: 12px;
    font-weight: 600;
  }

  .getsupp-product-badge {
    left: 12px;
    background: #ff4757;
  }

  .getsupp-product-sold-out-badge {
    right: 12px;
    background: #666;
  }

  .getsupp-product-info {
    padding: 20px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .getsupp-card-spacer {
    flex-grow: 1;
    min-height: 10px;
  }

  /* Enhanced Rating Display - simplified without colored box */
  .getsupp-product-rating-prominent {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 15px;
  }

  .getsupp-stars-large {
    display: flex;
    gap: 3px;
  }

  .getsupp-star-large {
    color: #FFD700;
    font-size: 18px;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  }

  .getsupp-rating-details {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .getsupp-rating-score {
    font-size: 16px;
    font-weight: 700;
    color: #04683F;
  }

  .getsupp-review-count-prominent {
    font-size: 12px;
    color: #666;
    font-weight: 500;
  }

  .getsupp-product-vendor {
    font-size: 12px;
    color: #666;
    margin-bottom: 8px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .getsupp-product-title {
    font-size: 16px;
    font-weight: 600;
    color: #333;
    margin-bottom: 12px;
    line-height: 1.4;
    font-family: 'Inter'
    , sans-serif;
  }

  .getsupp-product-price {
    margin-bottom: 12px;
  }

  /* Discount badges styling - matching featured products */
  .getsupp-price-with-discount {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .getsupp-discount-badges {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .getsupp-discount-percentage,
  .getsupp-discount-savings {
    color: white;
    padding: 4px 8px;
    border-radius: 6px;
    font-size: 12px;
    font-weight: 600;
  }

  .getsupp-discount-percentage {
    background: linear-gradient(135deg, #ff4757, #ff3838);
    font-weight: 700;
    box-shadow: 0 2px 4px rgba(255, 71, 87, 0.3);
  }

  .getsupp-discount-savings {
    background: linear-gradient(135deg, #04683F, #035a3a);
    box-shadow: 0 2px 4px rgba(4, 104, 63, 0.3);
  }

  .getsupp-price-comparison,
  .getsupp-price-regular {
    display: flex;
    align-items: center;
  }

  .getsupp-price-comparison {
    gap: 8px;
  }

  .getsupp-price-current {
    font-size: 18px;
    font-weight: 700;
    color: #04683F;
  }

  .getsupp-price-compare {
    font-size: 14px;
    color: #999;
    text-decoration: line-through;
    margin-right: 8px;
  }

  .getsupp-product-form {
    padding: 0 20px 20px;
    margin-top: auto;
  }

  .getsupp-add-to-cart {
    width: 100%;
    background: #04683F;
    color: white;
    border: none;
    padding: 12px 16px;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    margin-top: auto;
    transform: translateZ(0);
    -webkit-tap-highlight-color: transparent;
  }

  .getsupp-add-to-cart:hover {
    background: #035a3a;
    transform: translateY(-2px) translateZ(0);
  }

  .getsupp-add-to-cart:focus {
    outline: 2px solid #04683F;
    outline-offset: 2px;
  }

  .getsupp-pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-top: 60px;
  }

  .getsupp-pagination-btn {
    display: flex;
    align-items: center;
    gap: 8px;
    background: white;
    color: #04683F;
    border: 2px solid #04683F;
    padding: 12px 20px;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .getsupp-pagination-btn:hover {
    background: #04683F;
    color: white;
  }

  .getsupp-pagination-pages {
    display: flex;
    gap: 8px;
  }

  .getsupp-pagination-page {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: white;
    color: #666;
    border: 1px solid #ddd;
    border-radius: 8px;
    font-size: 14px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .getsupp-pagination-page:hover {
    background: #f8f9fa;
    border-color: #04683F;
    color: #04683F;
  }

  .getsupp-pagination-current {
    background: #04683F;
    color: white;
    border-color: #04683F;
  }

  .getsupp-empty-collection {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 400px;
  }

  .getsupp-empty-content {
    text-align: center;
    max-width: 400px;
  }

  .getsupp-empty-content svg {
    margin-bottom: 24px;
    opacity: 0.5;
  }

  .getsupp-empty-content h3 {
    font-size: 24px;
    font-weight: 600;
    color: #333;
    margin-bottom: 12px;
  }

  .getsupp-empty-content p {
    font-size: 16px;
    color: #666;
    margin-bottom: 24px;
    line-height: 1.5;
  }

  .getsupp-empty-btn {
    display: inline-flex;
    align-items: center;
    background: #04683F;
    color: white;
    padding: 12px 24px;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .getsupp-empty-btn:hover {
    background: #035a3a;
    transform: translateY(-2px);
  }

  /* Pagination responsive with smooth interactions */
  @media (max-width: 768px) {
    .getsupp-pagination {
      flex-direction: column;
      gap: 16px;
    }

    .getsupp-pagination-pages {
      order: -1;
    }
    
    .getsupp-pagination-btn {
      padding: 16px 24px;
      font-size: 16px;
      min-height: 48px; /* Better touch target */
    }
    
    .getsupp-pagination-page {
      min-width: 48px;
      height: 48px;
      font-size: 16px;
    }
  }
{% endstylesheet %}

{% schema %}
  {
    "name": "GetSupp Products",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "range",
        "id": "products_per_page",
        "label": "Products per page",
        "min": 12,
        "max": 48,
        "step": 12,
        "default": 24
      },
      {
        "type": "checkbox",
        "id": "show_vendor",
        "label": "Show vendor",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_rating",
        "label": "Show rating",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_quick_add",
        "label": "Show quick add to cart",
        "default": true
      }, {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Color scheme",
        "default": "scheme-1"
      }
    ],
    "presets": [
      {
        "name": "GetSupp Products"
      }
    ]
  }
{% endschema %}